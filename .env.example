# --- Database (Vercel Postgres) ---
DATABASE_URL="postgres://USER:PASSWORD@HOST:PORT/dbname?sslmode=require&pgbouncer=true"
DIRECT_URL="postgres://USER:PASSWORD@HOST:PORT/dbname?sslmode=require"

# --- Admin auth (Basic Auth middleware) ---
ADMIN_USER="admin"
ADMIN_PASS="change-me"

# Public site URL used for canonical links, sitemap, OpenGraph, JSON-LD, etc.
# Set this to your production domain (include protocol), e.g.:
# NEXT_PUBLIC_SITE_URL="https://flight-time-calculator.xkhronoz.dev"
# Note on not including the trailing slash:
# "https://your-domain.com" is correct, whereas
# "https://your-domain.com/" is incorrect.
NEXT_PUBLIC_SITE_URL="https://your-domain.com"

