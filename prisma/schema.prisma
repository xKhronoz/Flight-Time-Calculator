generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Airport {
  id        Int       @id @default(autoincrement())
  iata      String    @unique @db.VarChar(3)
  icao      String?   @db.VarChar(4)
  name      String
  city      String?
  country   String?
  timezone  String
  lat       Float?
  lon       Float?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  auditLogs AuditLog[]
  snapshots Snapshot[]
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  airport   Airport  @relation(fields: [iata], references: [iata])
  iata      String   @db.VarChar(3)

  field     String
  oldValue  String?
  newValue  String?

  changedBy String?   // username/basic auth user
  reason    String?   // required in API/UI, nullable in DB for back-compat
  changedAt DateTime  @default(now())

  @@index([iata])
}

model Snapshot {
  id        Int      @id @default(autoincrement())
  airport   Airport  @relation(fields: [iata], references: [iata])
  iata      String   @db.VarChar(3)

  data      Json
  changedBy String?
  reason    String?
  changedAt DateTime  @default(now())

  @@index([iata])
}